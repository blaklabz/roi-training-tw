pipeline {
    agent any
    environment {
        PATH = "${env.HOME}/.local/bin:${env.PATH}"
    }
    stages {
        stage('Install Semgrep') {
            steps {
                sh '''
                pip install --user semgrep
                '''
            }
        }
        stage('Run Semgrep Scan') {
            steps {
                script {
                    def result = sh(script: 'semgrep scan --quiet 03-devops-capstone/ai-api || true', returnStdout: true).trim()
                    if (result) {
                        echo "⚠️ Semgrep found issues:\n${result}"
                    } else {
                        echo '✅ Semgrep passed with no issues'
                    }
                }
            }
        }
    }
}
