pipeline {
    agent any
    environment {
        PATH = "${env.HOME}/.local/bin:${env.PATH}"
    }
    stages {
        stage('Scan IaC with Checkov') {
            steps {
                sh 'pip install --user checkov'

                script {
                    def checkovScan = sh(
                        script: 'checkov -d 03-devops-capstone/infra --quiet --compact',
                        returnStatus: true
                    )

                    if (checkovScan != 0) {
                        echo '⚠️ Checkov found issues in your infrastructure code'
                    } else {
                        echo '✅ Checkov passed with no issues'
                    }
                }
            }
        }
    }
}
