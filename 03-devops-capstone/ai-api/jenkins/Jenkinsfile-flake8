pipeline {
    agent any
    environment {
        PATH = "${env.HOME}/.local/bin:${env.PATH}"
    }
    stages {
        stage('Lint Python Code') {
            steps {
                sh 'export PATH=$HOME/.local/bin:$PATH'
                sh 'pip install --user flake8'
                sh 'flake8 03-devops-capstone/ai-api/app.py'
                sh 'flake8 03-devops-capstone/ai-api/tests/'
            }
        }
    }
}
