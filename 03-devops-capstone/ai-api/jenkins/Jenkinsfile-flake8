pipeline {
  agent any

  parameters {
    string(name: 'SOURCE_DIR', defaultValue: '03-devops-capstone/ai-api', description: 'Path to Python source code')
  }

  stages {
    stage('Lint Python Code') {
      steps {
        sh """
          pip install flake8
          flake8 ${params.SOURCE_DIR}
        """
      }
    }
  }
}
