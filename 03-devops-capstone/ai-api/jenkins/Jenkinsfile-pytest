pipeline {
    agent any

    stages {
        stage('Run Pytest') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r 03-devops-capstone/ai-api/requirements.txt
                    ./venv/bin/pytest 03-devops-capstone/ai-api
                '''
            }
        }
    }
}
