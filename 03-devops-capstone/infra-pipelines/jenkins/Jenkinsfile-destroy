pipeline {
  agent any

  environment {
    AWS_REGION = 'us-east-1'
  }

  stages {
    stage('Destroy EKS Cluster') {
      steps {
        dir('03-devops-capstone/infra-pipelines/terraform/eks') {
          withCredentials([[
            $class: 'AmazonWebServicesCredentialsBinding',
            credentialsId: 'aws-credentials'
          ]]) {
            sh '''
              terraform init
              terraform destroy -auto-approve
            '''
          }
        }
      }
    }

    stage('Destroy VPC') {
      steps {
        dir('03-devops-capstone/infra-pipelines/terraform/eks') {
          withCredentials([[
            $class: 'AmazonWebServicesCredentialsBinding',
            credentialsId: 'aws-credentials'
          ]]) {
            sh '''
              terraform init
              terraform destroy -auto-approve
            '''
          }
        }
      }
    }
  }
}
