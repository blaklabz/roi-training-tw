pipeline {
  agent any

  environment {
    TF_WORKING_DIR = '03-devops-capstone/infra-pipelines/vpc/terraform'
    AWS_REGION = 'us-east-1'
  }

stages {
    stage('Terraform Init') {
      steps {
        dir('03-devops-capstone/infra-pipelines/vpc/terraform') {
          withCredentials([[
            $class: 'AmazonWebServicesCredentialsBinding',
            credentialsId: 'aws-credentials'
          ]]) {
            sh 'terraform init'
          }
        }
      }
    }

    stage('Terraform Plan') {
      steps {
        dir('03-devops-capstone/infra-pipelines/vpc/terraform') {
          withCredentials([[
            $class: 'AmazonWebServicesCredentialsBinding',
            credentialsId: 'aws-credentials'
          ]]) {
            sh 'terraform plan -out=tfplan'
          }
        }
      }
    }

    stage('Terraform Apply') {
      when {
        branch 'main'
      }
      steps {
        dir('03-devops-capstone/infra-pipelines/vpc/terraform') {
          withCredentials([[
            $class: 'AmazonWebServicesCredentialsBinding',
            credentialsId: 'aws-credentials'
          ]]) {
            sh 'terraform apply -auto-approve tfplan'
          }
        }
      }
    }
  }
}
