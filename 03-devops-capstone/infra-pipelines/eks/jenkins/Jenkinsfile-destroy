pipeline {
  agent any

  environment {
    TF_WORKING_DIR = '03-devops-capstone/infra-pipelines/eks/terraform'
    AWS_REGION = 'us-east-1'
  }

  stages {
    stage('Terraform Init') {
      steps {
        dir("${TF_WORKING_DIR}") {
          withCredentials([[
            $class: 'AmazonWebServicesCredentialsBinding',
            credentialsId: 'aws-credentials'
          ]]) {
            sh 'terraform init'
          }
        }
      }
    }

    stage('Terraform Destroy') {
      steps {
        dir("${TF_WORKING_DIR}") {
          withCredentials([[
            $class: 'AmazonWebServicesCredentialsBinding',
            credentialsId: 'aws-credentials'
          ]]) {
            sh 'terraform destroy -auto-approve'
          }
        }
      }
    }
  }
}
